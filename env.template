# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Privy Configuration
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id-here
PRIVY_APP_SECRET=your-privy-app-secret-here

# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet, use: https://api.mainnet-beta.solana.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nddv_db

# JWT Secret for token signing
JWT_SECRET=your-jwt-secret-key-here-min-32-characters

# Optional: Arweave Configuration (for document storage)
ARWEAVE_WALLET_KEY=
ARWEAVE_GATEWAY_URL=https://arweave.net

